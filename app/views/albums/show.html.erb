<h1><%= @album.title %></h1>


<ul>
	<% @album.photos.each do |photo| %>
		<li>
			<%= link_to(photo.image.url) do %>
				<%= image_tag photo.image.url(:square) %>
			<% end %>
		</li>
	<% end %>
</ul>

<h2>Add a new photo</h2>

<%= form_for(:photo, url: album_photos_path(@album), multipart: true) do |f| %>
  
  <div class="field">
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit 'Add Photo' %>
    <%= link_to 'Back to Albums', albums_path, class: 'button' %>
  </div>
<% end %>

<p>Total photos: <%= @album.photos.length %></p>
